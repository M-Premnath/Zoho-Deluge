// 5.8.write a deluge script to print the words (always, like, be) for each sentences in the given list.
Sentences= {"Positive thinking always leads to success", "I like Nature", "Be positive"};
find1 = "always";
find2 = "like";
find3 = "Be";
for each sent in Sentences{
	if(sent.contains(find1)){
		info find1 ;
	}
	if(sent.contains(find2)){
		info find2;
	}
	if(sent.contains(find3)){
		info find3 ;
	}
}
//Another method without contains() function ----------------------------

Sentences= {"Positive thinking always leads to success", "I like Nature", "Be positive"};

for each sen in Sentences{
	subList = sen.toList(" ");
	info subList ;
		for each n in subList{
			if (n == "always"){
				info "always" ;
			} 
						if (n == "like"){
				info "like" ;
			} 
						if (n == "Be"){
				info "be" ;
			} 
		}
		
}
