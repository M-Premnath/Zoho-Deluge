// 4.10 write a deluge script to find the even and odd numbers from a list.
List= {12,11,22,77,34,33,90};
EvenList = {};
OddList = {};
for each n in List{
	if(n % 2 == 0){
	EvenList.add(n);	
	}else 
    {
		OddList.add(n);
    }
}
info "Given List: "+ List ;
info"Even List: "+EvenList;
info "Odd List: "+ OddList;


