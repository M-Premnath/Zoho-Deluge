//Write a script to input a month number and print the number of days in that
month.
// input
month = 4;
if( month.matches(2))
{
	info "The month has 28 Days";
} else if  ( month.matches(2)|| month.matches(4)|| month.matches(6)|| month.matches(9)|| month.matches(11) ) 
{
	info "This month has 30 days" ;
}else if  ( month.matches(1)|| month.matches(3)|| month.matches(5)|| month.matches(7)|| month.matches(8) || month.matches(9)|| month.matches(10)|| month.matches(12))
{
	info"This month has 31 days";
} else 
{
	info "Not a valid Month";
}
