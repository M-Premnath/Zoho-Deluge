//3.4
// input
physics = 75;
chemistry = 88;
biology = 78;
computer = 90;
maths = 79;
maximum_mark = 500;

// code
total = physics+chemistry+biology+computer+maths;
info "Total: "+total;
percentage = (total/maximum_mark) * 100;
info "Percentage: "+percentage;

// Find grade
if(percentage>=90){
	info "Grade A";
}else if ( percentage>=80 ) 
{
	info "Grade B";
}else if ( percentage>=70 ) 
{
	info "Grade C";
}else if ( percentage>=60 ) 
{
	info "Grade D";
}else if ( percentage>=40 ) 
{
	info "Grade E";
}else if ( percentage<40 ) 
{
	info "Grade F";
}
