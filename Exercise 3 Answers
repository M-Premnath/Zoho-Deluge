//3.22
a = 2 ;
b = 4;
c = 2;

D = (b*b)-4*(a*c);
info "D:"+ D ;

if ( D > 0 ) 
{
	r1 = ((0-b)+ D.sqrt())/(2*a);
	r2 = ((0-b)- D.sqrt())/(2*a);
	info "Root1,Root2:"+r1 +","+r2 ;
}else if ( D == 0 ) 
{
	root = (0-b) / (2*a);
	info "Root:"+root ;
}_______________________________________________
