// Find the given string contains vowels or not ?
sname="Elephant";

if (sname.contains("a") || sname.contains("e") || sname.contains("i") || sname.contains("o") || sname.contains("u") )
{
	info sname+" has vowels" ;
} else 
{
	info sname+" dosen't contains vowels" ;
}
