//Find the Maximum of the given 3 numbers

num1 = 50;
num2 = 15;
num3 = 20;

if (num1 > num2 && num1 > num3)
{
	info " 1st num ["+num1+"] is greater than "+num2 +" & "+num3;
} else if ( num2 > num1 && num2 > num3 ) 
{
	info  "2nd num ["+num2+"] is greaterr than "+num1 +" & "+num3;	
} else if ( num3 > num1 && num3 > num2 ) 
{
	info  "3rd num ["+num3+"] is greaterr than "+num1 +" & "+num2;
}
