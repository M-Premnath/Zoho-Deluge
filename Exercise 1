// Find Area and Perimeter of Square 

// Area of Suquare
side = 5;
area = side * side;
info "Area of Square: "+area;

// Perimeter of Square
peri = 4 * side;
info "Perimeter of Square:" + peri;
_______________________________________
// Find Area and circumference of a circle 

// Area of a circle 
r = 15;
pi = 3.14159;

area = pi * (r*r);
info "Area of circle: " + area;

//circumference of circle
cir = 2* pi * r;
info "circumference of circle: " + cir;
_______________________________________________
