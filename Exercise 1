//Find add,sub,mul,div for any 2 numbers
a = 10;
b = 5;

// calculate
add = a+b;
sub = a-b;
mul = a*b;
div = a/b;

//output
info "Add = "+ add;
info "Sub = "+ sub;
info "Multi = "+ mul;
info "Div = "+ div;
