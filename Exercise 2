// Find the given number is divisible by 5 or 11
num = 44;

 if (( num % 5 == 0) &&  (num % 11 == 0 )){
	 info num +" is Divisible by both 5 & 11";
 }else if  ( num % 5 == 0) 
 {
	 info num +" is Divisible by 5";
 }else if ( num % 11 == 0 ) 
 {
	 info num +" is Divisible by 11";
 }else 
 {
	 info num +" is not Divisible by 5 & 11";
 }
